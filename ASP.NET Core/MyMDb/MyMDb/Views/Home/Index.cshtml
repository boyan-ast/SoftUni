@model List<MovieIndexViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div id="carouselExampleControls" class="carousel slide col-md-6" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                    <img class="d-block w-100" src="@Model[i].ImageUrl" alt="@Model[i].Title">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>
                            <a class="btn btn-dark"
                           asp-controller="Movies"
                           asp-action="Details"
                           asp-route-id="@Model[i].Id">
                                @Model[i].Title
                            </a>
                        </h5>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="col-md-6">
        <h1 class="text-center">Other info...</h1>
    </div>
</div>
